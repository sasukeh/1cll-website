---
export interface Props {
  lang?: 'ja' | 'en';
}

const { lang = 'ja' } = Astro.props;
const currentYear = new Date().getFullYear();
const basePath = lang === 'en' ? '/en' : '';

const footerLinks = lang === 'en' ? {
  products: [
    { href: '/en/products/run-diary', label: 'Run Diary' },
  ],
  company: [
    { href: '/en/about', label: 'About Us' },
    { href: '/en/contact', label: 'Contact' },
  ],
  legal: [
    { href: '/en/privacy', label: 'Privacy Policy' },
    { href: '/en/terms', label: 'Terms of Service' },
  ],
} : {
  products: [
    { href: '/products/run-diary', label: 'Run Diary' },
  ],
  company: [
    { href: '/about', label: '会社概要' },
    { href: '/contact', label: 'お問い合わせ' },
  ],
  legal: [
    { href: '/privacy', label: 'プライバシーポリシー' },
    { href: '/terms', label: '利用規約' },
  ],
};

const labels = lang === 'en' ? {
  tagline: 'Developing apps and services\nto enhance your lifestyle',
  products: 'Products',
  company: 'Company',
  legal: 'Legal',
} : {
  tagline: 'ライフスタイル向上のための<br />アプリ・サービスを開発しています',
  products: 'プロダクト',
  company: '会社情報',
  legal: '法的情報',
};
---

<footer class="footer">
  <div class="container">
    <div class="footer-grid">
      <div class="footer-brand">
        <a href={basePath + '/'} class="footer-logo">Creative Life Labo</a>
        <p class="footer-tagline" set:html={labels.tagline}></p>
      </div>
      
      <div class="footer-links">
        <div class="footer-column">
          <h4>{labels.products}</h4>
          <ul>
            {footerLinks.products.map(link => (
              <li><a href={link.href}>{link.label}</a></li>
            ))}
          </ul>
        </div>
        
        <div class="footer-column">
          <h4>{labels.company}</h4>
          <ul>
            {footerLinks.company.map(link => (
              <li><a href={link.href}>{link.label}</a></li>
            ))}
          </ul>
        </div>
        
        <div class="footer-column">
          <h4>{labels.legal}</h4>
          <ul>
            {footerLinks.legal.map(link => (
              <li><a href={link.href}>{link.label}</a></li>
            ))}
          </ul>
        </div>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p>&copy; {currentYear} Creative Life Labo. All rights reserved.</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--color-bg-alt);
    border-top: 1px solid var(--color-border);
    padding: 4rem 0 2rem;
  }
  
  .footer-grid {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 4rem;
  }
  
  .footer-logo {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-text);
  }
  
  .footer-tagline {
    margin-top: 1rem;
    color: var(--color-text-light);
    font-size: 0.875rem;
    line-height: 1.6;
  }
  
  .footer-links {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }
  
  .footer-column h4 {
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-lighter);
    margin-bottom: 1rem;
  }
  
  .footer-column ul {
    list-style: none;
  }
  
  .footer-column li {
    margin-bottom: 0.5rem;
  }
  
  .footer-column a {
    color: var(--color-text-light);
    font-size: 0.9375rem;
  }
  
  .footer-column a:hover {
    color: var(--color-primary);
  }
  
  .footer-bottom {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
    text-align: center;
  }
  
  .footer-bottom p {
    color: var(--color-text-lighter);
    font-size: 0.875rem;
  }
  
  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .footer-links {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 480px) {
    .footer-links {
      grid-template-columns: 1fr;
    }
  }
</style>
