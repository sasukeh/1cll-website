---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
---

<Layout 
  title="Contact" 
  description="Contact Creative Life Labo. Feel free to reach out with questions about our products, partnership inquiries, or any other matters."
  lang="en"
>
  <Header currentPath="/en/contact" lang="en" />
  
  <main>
    <!-- Hero -->
    <section class="hero">
      <div class="container">
        <h1>Contact</h1>
        <p class="subtitle">Feel free to reach out</p>
      </div>
    </section>
    
    <!-- Contact Form -->
    <section class="section contact">
      <div class="container">
        <div class="contact-grid">
          <div class="contact-info">
            <h2>How to Reach Us</h2>
            <p class="info-description">
              Please use the form below or contact us directly via email.
              We typically respond within 2-3 business days.
            </p>
            
            <div class="contact-methods">
              <div class="method">
                <div class="method-icon">üìß</div>
                <div class="method-content">
                  <h3>Email</h3>
                  <a href="mailto:contact@1cll.com">contact@1cll.com</a>
                </div>
              </div>
              
              <div class="method">
                <div class="method-icon">üåê</div>
                <div class="method-content">
                  <h3>Website</h3>
                  <a href="https://1cll.com">https://1cll.com</a>
                </div>
              </div>
            </div>
            
            <div class="inquiry-types">
              <h3>Common Inquiries</h3>
              <ul>
                <li>Product questions</li>
                <li>Technical support</li>
                <li>Partnership inquiries</li>
                <li>Media & press</li>
                <li>General inquiries</li>
              </ul>
            </div>
          </div>
          
          <div class="contact-form-wrapper">
            <form class="contact-form" id="contact-form" action="https://api.web3forms.com/submit" method="POST">
              <!-- Web3Forms Access Key -->
              <input type="hidden" name="access_key" value="26a16d32-cb92-474f-9c88-43b577ac27e1" />
              <input type="hidden" name="subject" value="[1cll.com] New Contact Form Submission" />
              <input type="hidden" name="from_name" value="Creative Life Labo Website" />
              <input type="hidden" name="redirect" value="https://www.1cll.com/en/contact/thanks" />
              
              <!-- Honeypot Spam Protection -->
              <input type="checkbox" name="botcheck" class="hidden" style="display: none;" />
              
              <div class="form-group">
                <label for="name">Name <span class="required">*</span></label>
                <input 
                  type="text" 
                  id="name" 
                  name="name" 
                  required
                  placeholder="John Doe"
                />
              </div>
              
              <div class="form-group">
                <label for="email">Email <span class="required">*</span></label>
                <input 
                  type="email" 
                  id="email" 
                  name="email" 
                  required
                  placeholder="example@email.com"
                />
              </div>
              
              <div class="form-group">
                <label for="inquiry_type">Subject <span class="required">*</span></label>
                <select id="inquiry_type" name="inquiry_type" required>
                  <option value="">Please select</option>
                  <option value="Product Question">Product Question</option>
                  <option value="Technical Support">Technical Support</option>
                  <option value="Partnership Inquiry">Partnership Inquiry</option>
                  <option value="Media & Press">Media & Press</option>
                  <option value="Other">Other</option>
                </select>
              </div>
              
              <div class="form-group">
                <label for="message">Message <span class="required">*</span></label>
                <textarea 
                  id="message" 
                  name="message" 
                  rows="6" 
                  required
                  placeholder="Please enter your message"
                ></textarea>
              </div>
              
              <div class="form-group">
                <button type="submit" class="btn btn-primary btn-full" id="submit-btn">
                  Send Message
                </button>
              </div>
              
              <div id="form-status" class="form-status"></div>
              
              <p class="form-note">
                * Your information will be handled in accordance with our Privacy Policy.
              </p>
            </form>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Alternative Contact -->
    <section class="section alt-contact">
      <div class="container">
        <div class="alt-contact-content">
          <h2>Run Diary Inquiries</h2>
          <p>
            For technical questions or feedback about Run Diary,
            please use the in-app support feature or contact us via email.
          </p>
          <a href="/en/products/run-diary" class="btn btn-secondary">
            Learn More About Run Diary
          </a>
        </div>
      </div>
    </section>
  </main>
  
  <Footer lang="en" />
</Layout>

<style>
  /* Hero */
  .hero {
    padding: 4rem 0;
    background: linear-gradient(180deg, var(--color-bg) 0%, var(--color-bg-alt) 100%);
    text-align: center;
  }
  
  .hero h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }
  
  .subtitle {
    font-size: 1.25rem;
    color: var(--color-text-light);
  }
  
  /* Contact */
  .contact {
    background-color: var(--color-bg);
  }
  
  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: 4rem;
  }
  
  .contact-info h2 {
    margin-bottom: 1rem;
  }
  
  .info-description {
    color: var(--color-text-light);
    line-height: 1.8;
    margin-bottom: 2rem;
  }
  
  .contact-methods {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-bottom: 2rem;
  }
  
  .method {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
  }
  
  .method-icon {
    font-size: 1.5rem;
    flex-shrink: 0;
  }
  
  .method-content h3 {
    font-size: 1rem;
    margin-bottom: 0.25rem;
  }
  
  .method-content a {
    color: var(--color-primary);
  }
  
  .inquiry-types {
    background-color: var(--color-bg-alt);
    border-radius: var(--radius-lg);
    padding: 1.5rem;
  }
  
  .inquiry-types h3 {
    font-size: 1rem;
    margin-bottom: 1rem;
  }
  
  .inquiry-types ul {
    list-style: none;
  }
  
  .inquiry-types li {
    position: relative;
    padding-left: 1.5rem;
    margin-bottom: 0.5rem;
    color: var(--color-text-light);
    font-size: 0.9375rem;
  }
  
  .inquiry-types li::before {
    content: '‚Ä¢';
    position: absolute;
    left: 0;
    color: var(--color-primary);
  }
  
  /* Form */
  .contact-form-wrapper {
    background-color: var(--color-bg-alt);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: 2rem;
  }
  
  .hidden {
    display: none;
  }
  
  .form-group {
    margin-bottom: 1.5rem;
  }
  
  .form-group label {
    display: block;
    font-weight: 500;
    margin-bottom: 0.5rem;
    font-size: 0.9375rem;
  }
  
  .required {
    color: #EF4444;
  }
  
  .form-group input,
  .form-group select,
  .form-group textarea {
    width: 100%;
    padding: 0.75rem 1rem;
    font-size: 1rem;
    font-family: inherit;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    background-color: var(--color-bg);
    color: var(--color-text);
    transition: border-color var(--transition-fast), box-shadow var(--transition-fast);
  }
  
  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
  }
  
  .form-group input::placeholder,
  .form-group textarea::placeholder {
    color: var(--color-text-lighter);
  }
  
  .form-group select {
    cursor: pointer;
  }
  
  .form-group textarea {
    resize: vertical;
    min-height: 150px;
  }
  
  .btn-full {
    width: 100%;
  }
  
  .form-note {
    font-size: 0.8125rem;
    color: var(--color-text-lighter);
    text-align: center;
    margin-top: 1rem;
  }
  
  @media (max-width: 768px) {
    .contact-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }
  
  /* Alt Contact */
  .alt-contact {
    background-color: var(--color-bg-alt);
  }
  
  .alt-contact-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }
  
  .alt-contact h2 {
    margin-bottom: 1rem;
  }
  
  .alt-contact p {
    color: var(--color-text-light);
    margin-bottom: 2rem;
    line-height: 1.8;
  }
</style>
