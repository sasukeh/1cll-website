---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
---

<Layout 
  title="Message Sent" 
  description="Thank you for contacting us. We will review your message and respond shortly."
  lang="en"
>
  <Header currentPath="/en/contact" lang="en" />
  
  <main>
    <section class="thanks">
      <div class="container">
        <div class="thanks-content">
          <div class="thanks-icon">âœ…</div>
          <h1>Message Sent</h1>
          <p class="thanks-message">
            Thank you for contacting us.<br />
            We will review your message and respond within 2-3 business days.
          </p>
          <div class="thanks-buttons">
            <a href="/en/" class="btn btn-primary">
              Back to Home
            </a>
            <a href="/en/products/run-diary" class="btn btn-secondary">
              View Run Diary
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer lang="en" />
</Layout>

<style>
  .thanks {
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 4rem 0;
  }
  
  .thanks-content {
    text-align: center;
    max-width: 500px;
    margin: 0 auto;
  }
  
  .thanks-icon {
    font-size: 4rem;
    margin-bottom: 1.5rem;
  }
  
  .thanks-content h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }
  
  .thanks-message {
    font-size: 1.125rem;
    color: var(--color-text-light);
    line-height: 1.8;
    margin-bottom: 2rem;
  }
  
  .thanks-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }
</style>
